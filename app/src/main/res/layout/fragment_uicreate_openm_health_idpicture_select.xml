<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ndn.jwtan.identitymanager.UICreateOpenmHealthIDPictureSelect">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/buttonInfoBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_back"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="1"
            android:onClick="backImage" />

        <Button
            android:id="@+id/submitEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:onClick="submitImage"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="302dp"
        android:layout_height="302dp"
        android:layout_gravity="center">

        <com.ndn.jwtan.identitymanager.CustomImageViewer
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:id="@+id/imageView1"
            android:layout_gravity="left|top"
            android:src="@drawable/ic_people_outline_black_24dp"
            android:tag="ic_people_outline_black_24dp"
            android:onClick="imageViewClick"
            android:nestedScrollingEnabled="false" />

        <com.ndn.jwtan.identitymanager.CustomImageViewer
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal|top"
            android:onClick="imageViewClick"
            android:src="@drawable/ic_mood_bad_black_24dp"
            android:tag="ic_mood_bad_black_24dp" />

        <com.ndn.jwtan.identitymanager.CustomImageViewer
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:id="@+id/imageView3"
            android:layout_gravity="right|top"
            android:onClick="imageViewClick"
            android:src="@drawable/ic_cake_black_24dp"
            android:tag="ic_cake_black_24dp" />

        <com.ndn.jwtan.identitymanager.CustomImageViewer
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:id="@+id/imageView4"
            android:layout_gravity="left|center_vertical"
            android:onClick="imageViewClick"
            android:src="@drawable/ic_party_mode_black_24dp"
            android:tag="ic_party_mode_black_24dp" />

        <com.ndn.jwtan.identitymanager.CustomImageViewer
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:id="@+id/imageView5"
            android:layout_gravity="center"
            android:onClick="imageViewClick"
            android:src="@drawable/ic_school_black_24dp"
            android:tag="ic_school_black_24dp"/>

        <com.ndn.jwtan.identitymanager.CustomImageViewer
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:id="@+id/imageView6"
            android:onClick="imageViewClick"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_mood_black_24dp"
            android:tag="ic_mood_black_24dp"/>

        <com.ndn.jwtan.identitymanager.CustomImageViewer
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:id="@+id/imageView7"
            android:layout_gravity="left|bottom"
            android:onClick="imageViewClick"
            android:src="@drawable/ic_person_add_black_24dp"
            android:tag="ic_person_add_black_24dp" />

        <com.ndn.jwtan.identitymanager.CustomImageViewer
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:id="@+id/imageView8"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="imageViewClick"
            android:src="@drawable/ic_share_black_24dp"
            android:tag="ic_share_black_24dp"/>

        <com.ndn.jwtan.identitymanager.CustomImageViewer
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:id="@+id/imageView9"
            android:layout_gravity="right|bottom"
            android:onClick="imageViewClick"
            android:src="@drawable/ic_whatshot_black_24dp"
            android:tag="ic_whatshot_black_24dp"/>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_picture_hint"
        android:id="@+id/selectPictureHint"
        android:layout_gravity="center|top"
        android:textIsSelectable="false"
        android:textSize="24sp" />

</FrameLayout>
